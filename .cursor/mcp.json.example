{
  "mcpServers": {
    "firecrawl": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "FIRECRAWL_API_KEY=${env:FIRECRAWL_API_KEY}",
        "mcp/firecrawl"
      ]
    },
    "@magicuidesign/mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@magicuidesign/mcp@latest"
      ]
    },
    "sequential-thinking": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    },
    "brave-search": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "BRAVE_API_KEY=${env:BRAVE_API_KEY}",
        "mcp/brave-search"
      ]
    },
    "tavily": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e",
        "TAVILY_API_KEY=${env:TAVILY_API_KEY}",
        "mcp/tavily"
      ]
    },
    "fetch": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/fetch"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "Notion": {
      "url": "https://mcp.notion.com/mcp"
    },
    "notion-sse": {
      "type": "sse",
      "url": "https://mcp.notion.com/sse"
    },
    "notion-stdio": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.notion.com/mcp"]
    },
    "notion-open-source": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-notion"
      ],
      "env": {
        "NOTION_API_KEY": "${env:NOTION_API_KEY}",
        "NOTION_API_VERSION": "${env:NOTION_API_VERSION}"
      }
    },
    "shopify-dev-mcp": {
      "command": "npx",
      "args": ["-y", "@shopify/dev-mcp@latest"]
    },
    "@21st-dev/magic": {
      "command": "npx",
      "args": ["-y", "@21st-dev/magic@latest"],
      "env": {
        "API_KEY": "${env:MAGIC_21ST_API_KEY}"
      },
      "description": "21st.dev Magic - AI UI component generation (create-ui, fetch-ui, refine-ui, logo-search)"
    }
  }
}
